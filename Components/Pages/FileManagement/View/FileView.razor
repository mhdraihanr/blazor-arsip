@page "/file/{id:int}"
@using blazor_arsip.Services
@using blazor_arsip.Models
@using blazor_arsip.Components.Pages.FileManagement.View
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@rendermode InteractiveServer

<PageTitle>View File - Arsip Digital</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h4 text-gray-800 mb-0">File Viewer</h1>
                <div>
                    <button class="btn btn-outline-primary btn-sm me-2" @onclick="DownloadFile">
                        <i class="fas fa-download me-2"></i>Download
                    </button>
                    <button class="btn btn-outline-secondary btn-sm me-2" @onclick="EditFile">
                        <i class="fas fa-edit me-2"></i>Edit
                    </button>
                    <a href="/list" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (viewModel.IsLoading)
    {
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading file...</p>
            </div>
        </div>
    }
    else if (viewModel.FileRecord == null)
    {
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    File not found.
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- File Information -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">File Information</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td class="fw-bold">File Name:</td>
                                <td>@viewModel.FileRecord.OriginalFileName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">File Size:</td>
                                <td>@FileViewViewModel.FormatFileSize(viewModel.FileRecord.FileSize)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">File Type:</td>
                                <td>@viewModel.FileRecord.FileExtension.ToUpper()</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Category:</td>
                                <td><span class="badge bg-primary">@viewModel.FileRecord.Category</span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td class="fw-bold">Uploaded By:</td>
                                <td>@viewModel.FileRecord.UploadedBy</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Upload Date:</td>
                                <td>@viewModel.FileRecord.UploadedAt.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Description:</td>
                                <td>@(string.IsNullOrEmpty(viewModel.FileRecord.Description) ? "No description" : viewModel.FileRecord.Description)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Tags:</td>
                                <td>@(string.IsNullOrEmpty(viewModel.FileRecord.Tags) ? "No tags" : viewModel.FileRecord.Tags)</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- File Preview -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">File Preview</h6>
            </div>
            <div class="card-body">
                @if (viewModel.IsPreviewSupported())
                {
                    <div class="text-center">
                        @if (viewModel.IsImageFile())
                        {
                            <img src="/api/file/preview/@Id" class="img-fluid" style="max-height: 600px;" alt="@viewModel.FileRecord.OriginalFileName" />
                        }
                        else if (viewModel.IsPdfFile())
                        {
                            <iframe src="/api/file/preview/@Id" width="100%" height="600px" style="border: none;"></iframe>
                        }
                        else if (viewModel.IsTextFile())
                        {
                            <iframe src="/api/file/preview/@Id" width="100%" height="400px" style="border: 1px solid #dee2e6; border-radius: 0.375rem;"></iframe>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="file-icon mb-3" style="font-size: 4rem;">
                            <i class="@FileViewViewModel.GetFileIcon(viewModel.FileRecord.FileExtension)"></i>
                        </div>
                        <h5 class="text-muted">Preview not available</h5>
                        <p class="text-muted">This file type (@viewModel.FileRecord.FileExtension.ToUpper()) cannot be previewed in the browser.</p>
                        <button class="btn btn-primary" @onclick="DownloadFile">
                            <i class="fas fa-download me-2"></i>Download to View
                        </button>
                    </div>
                }
            </div>
        </div>
    }
</div>

@inherits FileViewBase
@page "/"
@page "/dashboard"
@using blazor_arsip.Services
@using blazor_arsip.Models
@using blazor_arsip.Components.Pages.Dashboard
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inherits DashboardBase

@rendermode InteractiveServer

<PageTitle>Arsip Digital - Dashboard</PageTitle>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="text-center py-4">
                <div class="mb-4">
                    <i class="fas fa-archive fa-4x text-primary mb-3"></i>
                    <h1 class="display-5 text-gray-800">Arsip Digital</h1>
                    <p class="lead text-gray-600">Sistem Manajemen File Digital Perusahaan</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                            <a href="/upload" class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-upload me-2"></i>
                                <span class="d-none d-sm-inline">Upload Files</span>
                                <span class="d-sm-none">Upload</span>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                            <a href="/list" class="btn btn-info btn-lg w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-list me-2"></i>
                                <span class="d-none d-sm-inline">Browse Files</span>
                                <span class="d-sm-none">Browse</span>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                            <a href="/logs" class="btn btn-success btn-lg w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-history me-2"></i>
                                <span class="d-none d-sm-inline">Logs</span>
                                <span class="d-sm-none">Logs</span>
                            </a>
                        </div>
                        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                            <a href="/settings" class="btn btn-warning btn-lg w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-cog me-2"></i>
                                <span class="d-none d-sm-inline">Settings</span>
                                <span class="d-sm-none">Settings</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Feature Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body text-center">
                    <i class="fas fa-upload fa-2x text-primary mb-2"></i>
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Fitur</div>
                    <div class="h6 mb-0 font-weight-bold text-gray-800">Upload & Organize</div>
                    <div class="text-xs text-gray-600">Kelola file dengan mudah</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Keamanan</div>
                    <div class="h6 mb-0 font-weight-bold text-gray-800">Secure Storage</div>
                    <div class="text-xs text-gray-600">Penyimpanan yang aman</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-2x text-info mb-2"></i>
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Pencarian</div>
                    <div class="h6 mb-0 font-weight-bold text-gray-800">Smart Search</div>
                    <div class="text-xs text-gray-600">Temukan file dengan cepat</div>
                </div>
            </div>
        </div>
    </div>

    @if (viewModel.IsLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Dashboard Statistics -->
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="h4 mb-3 text-gray-800">Dashboard Overview</h2>
            </div>
        </div>
        
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Files
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@viewModel.TotalFiles</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-file fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Total Size
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@FormatFileSize(viewModel.TotalSize)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-hdd fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Today's Uploads
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@viewModel.TodayUploads</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-upload fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Total Downloads
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@viewModel.TotalDownloads</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-download fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Category Distribution -->
            <div class="col-xl-6 col-lg-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Category Distribution</h6>
                    </div>
                    <div class="card-body">
                        @if (viewModel.CategoryStats.Any())
                        {
                            <div class="row">
                                @foreach (var category in viewModel.CategoryStats)
                                {
                                    <div class="col-md-12 mb-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@category.Category</span>
                                            <span class="badge bg-primary">@category.Count files</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-folder fa-3x mb-3"></i>
                                <p>No categories available</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="col-xl-6 col-lg-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Recent Activities</h6>
                        <a href="/logs" class="btn btn-sm btn-primary">View All</a>
                    </div>
                    <div class="card-body">
                        @if (viewModel.RecentActivities.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activity in viewModel.RecentActivities.Take(3))
                                {
                                    <div class="list-group-item border-0 px-0 py-3">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-shrink-0 me-3">
                                                <div class="activity-icon">
                                                    @switch (activity.ActivityType.ToLower())
                                                    {
                                                        case "upload":
                                                            <i class="fas fa-upload text-success"></i>
                                                            break;
                                                        case "download":
                                                            <i class="fas fa-download text-info"></i>
                                                            break;
                                                        case "update":
                                                            <i class="fas fa-edit text-warning"></i>
                                                            break;
                                                        case "delete":
                                                            <i class="fas fa-trash text-danger"></i>
                                                            break;
                                                        default:
                                                            <i class="fas fa-file text-secondary"></i>
                                                            break;
                                                    }
                                                </div>
                                            </div>
                                            <div class="activity-content flex-grow-1">
                                                <div class="d-flex justify-content-between align-items-start mb-1">
                                                    <span class="fw-bold small text-dark">@activity.ActivityType</span>
                                                    <small class="text-muted">@activity.PerformedAt.ToString("MMM dd, HH:mm")</small>
                                                </div>
                                                <div class="activity-filename mb-2" title="@activity.FileRecord.OriginalFileName">
                                                    @activity.FileRecord.OriginalFileName
                                                </div>
                                                <div class="text-muted small">
                                                    by @activity.PerformedByName
                                                    @if (activity.PerformedByName != activity.PerformedBy)
                                                    {
                                                        <span class="text-muted">(@activity.PerformedBy)</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-history fa-3x mb-3"></i>
                                <p>No recent activities</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


    }
</div>

<ToastContainer />

